  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :flag, include_hidden: false do |b| %>
  <p>
    <%= b.check_box id: "answer_ids_#{b.object.id}" %>
    <%= b.label %>
  </p>
  <% end %>
