<% arr = @test_passage.all_questions.order(id: :asc) %>
<%= arr.index{ |x| x[:id] == @test_passage.current_question.id} + 1 %>/<%= @test_passage.all_questions.count %>
<p>
  <b><%= @test_passage.current_question.body %></b>
</p>

