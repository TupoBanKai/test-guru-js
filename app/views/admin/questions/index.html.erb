<h1>Question</h1>

<table>
    <tr>
      <th>Questions</th>
      <th>Answers count</th>
    </tr>
  <% @test.questions.each do |question| %>
    <tr>
        <td><%= question.body %></td>

        <td><%=link_to 'Show', admin_test_question_answers_path(@test, question) %></td>
      <td><%=link_to 'Edit', edit_admin_test_question_path(@test, question) %></td>
      <td><%=link_to 'Delete',
        admin_test_question_path(@test, question),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
      </td>
  <% end %>
    </tr>
</table>
